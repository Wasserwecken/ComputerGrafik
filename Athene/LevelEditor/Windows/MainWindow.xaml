<Window x:Class="LevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelEditor"
        mc:Ignorable="d"
        Title="Level Editor" Height="900" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Width="Auto" Grid.Row="0" Height="20">
            <MenuItem Header="Neues Level" x:Name="AddLevelMenuItem" />
            <MenuItem Header="Level exportieren" x:Name="ExportGridMenuItem" />
            <MenuItem Header="Level importieren" x:Name="ImportGridMenuItem" />
        </Menu>

        <ContentControl HorizontalContentAlignment="Left"  x:Name="GridContentControl" Grid.Row="1" />

    </Grid>
</Window>
