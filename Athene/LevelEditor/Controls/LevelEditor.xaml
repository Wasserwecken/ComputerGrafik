<UserControl x:Class="LevelEditor.Controls.LevelEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="1300">
   
    <Grid HorizontalAlignment="Stretch">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"  />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <!--<ColumnDefinition Width="*" />-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentControl  Grid.Column="0" Grid.RowSpan="2" Grid.Row="0" x:Name="ContentControlOperate" />

        <GridSplitter ResizeDirection="Columns" Grid.Column="1" Grid.RowSpan="2" Background="Black" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Grid.Row="0" />

        <ScrollViewer x:Name="LevelGridScrollViewer" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="1" HorizontalScrollBarVisibility="Visible" >
            <ScrollViewer.LayoutTransform>
                <ScaleTransform CenterX="0" CenterY="0" ScaleX="{Binding ElementName=LevelZoomer,Path=Value}"  ScaleY="{Binding ElementName=LevelZoomer,Path=Value}" />
            </ScrollViewer.LayoutTransform>
        </ScrollViewer>
       
        <Border Grid.Column="2" Grid.Row="0" Background="#CCCCCC" BorderThickness="0,0,0,1" BorderBrush="Black">
            <Border.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Segoe UI Light" />
                    <Setter Property="FontSize" Value="14" />
                </Style>
            </Border.Resources>
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Zoom" Grid.Row="0" Padding="0,0,5,0" Grid.Column="0" />
                <TextBlock Text="Blocktyp auswählen" Padding="0,0,5,0" Grid.Row="0" Grid.Column="2" />
                <TextBlock Text="Kollision" Padding="0,0,5,0" Grid.Row="0" Grid.Column="4" />
                <TextBlock Text="Schaden" Padding="0,0,5,0" Grid.Row="0" Grid.Column="6" />

                <Slider Grid.Column="0" Grid.Row="1" x:Name="LevelZoomer" ToolTip="Level Zoom"  Width="200" VerticalAlignment="Center" Value="1" Minimum="0.1" Maximum="4" />
                <ComboBox Grid.Column="2" VerticalContentAlignment="Center" Grid.Row="1" x:Name="BlockTypeComboBox" />
                <StackPanel Grid.Row="1" Grid.Column="4">
                    <RadioButton GroupName="selectCollision" IsChecked="True" Content="Ja" x:Name="CollisionYesRadioButton" />
                    <RadioButton GroupName="selectCollision" Content="Nein" x:Name="CollisionNoRadioButton" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="6">
                    <Slider TickFrequency="1" IsSnapToTickEnabled="True" Width="150" x:Name="DamageSlider" Minimum="0" Maximum="100" />
                    <TextBlock Text="{Binding ElementName=DamageSlider, Path=Value}" />
                </StackPanel>
                
                
            </Grid>
           
        </Border>
    </Grid>

</UserControl>
